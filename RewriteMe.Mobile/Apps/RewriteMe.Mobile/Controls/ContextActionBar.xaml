<?xml version="1.0" encoding="UTF-8" ?>
<Grid x:Class="RewriteMe.Mobile.Controls.ContextActionBar"
      xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:RewriteMe.Mobile.Controls;assembly=RewriteMe.Mobile"
      Margin="0"
      Padding="0"
      BackgroundColor="{StaticResource ActionBarBorderColor}">
    <controls:StackedGrid x:Name="StackedGrid"
                          Margin="0,1,0,0"
                          BackgroundColor="{StaticResource WindowBackground}"
                          ColumnSpacing="0"
                          HorizontalOptions="FillAndExpand"
                          ItemTemplate="{StaticResource ContextActionBarTileCellTemplate}"
                          RowSpacing="0" />
</Grid>