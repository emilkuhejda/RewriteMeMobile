<?xml version="1.0" encoding="utf-8" ?>
<views:BaseNavigationPage x:Class="RewriteMe.Mobile.Views.OverviewPage"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:controls="clr-namespace:RewriteMe.Mobile.Controls;assembly=RewriteMe.Mobile"
                          xmlns:forms="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
                          xmlns:localization="clr-namespace:RewriteMe.Mobile.Localization;assembly=RewriteMe.Mobile"
                          xmlns:progressBar="clr-namespace:Syncfusion.XForms.ProgressBar;assembly=Syncfusion.SfProgressBar.XForms"
                          xmlns:resourceKeys="clr-namespace:RewriteMe.Resources.Localization;assembly=RewriteMe.Resources"
                          xmlns:views="clr-namespace:RewriteMe.Mobile.Views;assembly=RewriteMe.Mobile"
                          xmlns:xForms="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms">
    <views:BaseNavigationPage.Resources>
        <DataTemplate x:Key="FileItemsTemplate">
            <ViewCell>
                <Grid BackgroundColor="{StaticResource ColorWhite}">
                    <Grid Padding="20,20,20,20">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToDetailPageCommand}" />
                        </Grid.GestureRecognizers>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               HeightRequest="30"
                               Style="{StaticResource LabelStyle}"
                               Text="{Binding FileItem.Name}" />

                        <progressBar:SfStepProgressBar Grid.Column="1"
                                                       IsVisible="{Binding IsCompleted}"
                                                       Orientation="Vertical"
                                                       VerticalOptions="Center">
                            <progressBar:SfStepProgressBar.CompletedStepStyle>
                                <progressBar:StepStyle x:TypeArguments="progressBar:CompletedStepState"
                                                       MarkerContentSize="15"
                                                       MarkerFillColor="{StaticResource ColorPrimary}"
                                                       MarkerSize="30" />
                            </progressBar:SfStepProgressBar.CompletedStepStyle>
                            <progressBar:StepView Status="Completed" />
                        </progressBar:SfStepProgressBar>

                        <xForms:SfBusyIndicator Grid.Column="1"
                                                AnimationType="Print"
                                                BackgroundColor="{StaticResource ColorWhite}"
                                                HeightRequest="40"
                                                IsVisible="{Binding IsInProgress}"
                                                TextColor="{StaticResource ColorPrimary}"
                                                VerticalOptions="Center"
                                                ViewBoxHeight="40"
                                                ViewBoxWidth="40"
                                                WidthRequest="40" />
                    </Grid>
                </Grid>
            </ViewCell>
        </DataTemplate>
    </views:BaseNavigationPage.Resources>

    <views:BaseNavigationPage.RightNavigationToolbarItems>
        <controls:NavigationToolbarItem Command="{Binding NavigateToRecorderCommand}" Source="resource://RewriteMe.Mobile.Resources.Images.Record.svg" />
    </views:BaseNavigationPage.RightNavigationToolbarItems>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="1"
               FontAttributes="Italic"
               HorizontalOptions="Center"
               IsVisible="{Binding NotAvailableData}"
               Style="{StaticResource LabelStyle}"
               Text="{localization:Localization Text={x:Static resourceKeys:TranslationKeys.NoAvailableData}}"
               VerticalOptions="Start" />

        <ListView Grid.Row="1"
                  HasUnevenRows="True"
                  IsPullToRefreshEnabled="True"
                  IsRefreshing="{Binding IsRefreshing}"
                  ItemTemplate="{StaticResource FileItemsTemplate}"
                  ItemsSource="{Binding FileItems}"
                  RefreshCommand="{Binding RefreshCommand}"
                  SeparatorVisibility="None" />

        <Grid Grid.Row="1"
              Margin="0,0,0,10"
              Padding="0"
              BackgroundColor="Transparent"
              ColumnSpacing="0"
              HeightRequest="69"
              HorizontalOptions="End"
              RowSpacing="0"
              VerticalOptions="End"
              WidthRequest="69">
            <forms:SvgCachedImage Margin="0"
                                  Aspect="AspectFit"
                                  BackgroundColor="Transparent"
                                  HeightRequest="60"
                                  HorizontalOptions="CenterAndExpand"
                                  InputTransparent="True"
                                  Source="resource://RewriteMe.Mobile.Resources.Images.Add.svg"
                                  VerticalOptions="CenterAndExpand" />
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NavigateToCreatePageCommand}" />
            </Grid.GestureRecognizers>
        </Grid>
    </Grid>
</views:BaseNavigationPage>