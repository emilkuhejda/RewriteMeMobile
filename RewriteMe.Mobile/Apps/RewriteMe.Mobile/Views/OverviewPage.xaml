<?xml version="1.0" encoding="utf-8" ?>
<views:BaseNavigationPage x:Class="RewriteMe.Mobile.Views.OverviewPage"
                          xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:controls="clr-namespace:RewriteMe.Mobile.Controls;assembly=RewriteMe.Mobile"
                          xmlns:forms="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
                          xmlns:localization="clr-namespace:RewriteMe.Mobile.Localization;assembly=RewriteMe.Mobile"
                          xmlns:resourceKeys="clr-namespace:RewriteMe.Resources.Localization;assembly=RewriteMe.Resources"
                          xmlns:views="clr-namespace:RewriteMe.Mobile.Views;assembly=RewriteMe.Mobile">
    <views:BaseNavigationPage.Resources>
        <DataTemplate x:Key="FileItemsTemplate">
            <ViewCell>
                <ViewCell.View>
                    <Grid BackgroundColor="White">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToDetailPageCommand}" />
                        </Grid.GestureRecognizers>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" HeightRequest="50">
                            <Label HeightRequest="30"
                                   Style="{StaticResource LabelStyle}"
                                   Text="{Binding FileItem.Name}" />
                            <Frame IsVisible="{Binding IsInProgress}" Style="{StaticResource InProgressBackground}">
                                <Label FontAttributes="Italic"
                                       FontSize="{StaticResource MidMediumSize}"
                                       Style="{StaticResource LabelStyle}"
                                       Text="{localization:Localization Text={x:Static resourceKeys:TranslationKeys.InProgressLabel}}"
                                       TextColor="{StaticResource ColorWhite}" />
                            </Frame>
                        </StackLayout>

                        <forms:SvgCachedImage Grid.Column="1"
                                              Margin="0"
                                              Aspect="AspectFit"
                                              BackgroundColor="Transparent"
                                              HeightRequest="40"
                                              HorizontalOptions="End"
                                              InputTransparent="True"
                                              IsVisible="{Binding IsCompleted}"
                                              Source="resource://RewriteMe.Mobile.Resources.Images.Ok.svg"
                                              VerticalOptions="CenterAndExpand" />
                    </Grid>
                </ViewCell.View>
            </ViewCell>
        </DataTemplate>
    </views:BaseNavigationPage.Resources>

    <views:BaseNavigationPage.RightNavigationToolbarItems>
        <controls:NavigationToolbarItem Command="{Binding NavigateToSettingsCommand}" Source="resource://RewriteMe.Mobile.Resources.Images.Settings.svg" />
    </views:BaseNavigationPage.RightNavigationToolbarItems>

    <Grid>
        <Grid Padding="{StaticResource StandardPadding}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Grid.Column="0"
                  Padding="5,8,5,8"
                  BackgroundColor="{StaticResource WarningMessageBackground}"
                  IsVisible="{Binding IsUserRegistrationSuccess, Converter={StaticResource InvertedBoolConverter}}">
                <Label LineBreakMode="WordWrap"
                       Style="{StaticResource LabelStyle}"
                       Text="{localization:Localization Text={x:Static resourceKeys:TranslationKeys.RegistrationErrorMessage}}"
                       TextColor="{StaticResource ColorWhite}"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SendEmailCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <ListView Grid.Row="1"
                      HasUnevenRows="True"
                      ItemTemplate="{StaticResource FileItemsTemplate}"
                      ItemsSource="{Binding FileItems}" />

            <Grid Grid.Row="1"
                  Margin="0,0,10,10"
                  Padding="0"
                  BackgroundColor="Transparent"
                  ColumnSpacing="0"
                  HeightRequest="69"
                  HorizontalOptions="End"
                  RowSpacing="0"
                  VerticalOptions="End"
                  WidthRequest="69">
                <forms:SvgCachedImage Margin="0"
                                      Aspect="AspectFit"
                                      BackgroundColor="Transparent"
                                      HeightRequest="60"
                                      HorizontalOptions="CenterAndExpand"
                                      InputTransparent="True"
                                      Source="resource://RewriteMe.Mobile.Resources.Images.Add.svg"
                                      VerticalOptions="CenterAndExpand" />
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToCreatePageCommand}" />
                </Grid.GestureRecognizers>
            </Grid>
        </Grid>

        <controls:PageActivityIndicator Grid.Row="0"
                                        Caption="{localization:Localization Text={x:Static resourceKeys:TranslationKeys.ActivityIndicatorCaptionText}}"
                                        IsVisible="{Binding OperationScope.IsBusy}" />
    </Grid>
</views:BaseNavigationPage>